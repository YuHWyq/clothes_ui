
@{
    Layout = null;
}
@model IEnumerable<Clothes_UI.Models.in_repertory>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/Content/ElementUI/element-ui.css" rel="stylesheet" />
    <style>
        .yy {
            width: 100%;
            height: 400px;
            box-shadow: 0px 0px 5px 5px lightgray;
        }

        .ss {
            width: 100%;
            height: 80px;
            box-shadow: 0px 0px 3px 3px lightgray;
        }

        .top1 {
            margin-left: 50px;
        }

        .btn {
            margin-left: 1250px;
        }

        .btn2 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: orange;
            border: none;
        }

        .btn3 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
            margin-left: -5px;
        }

        .btn4 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .text {
            width: 200px;
            height: 40px;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="ss">
            <div style="margin-left:50px;">
                <br />
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">产品库存管理</li>
                        <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">产品入库单管理</li>
                    </ol>
                </nav>
            </div>
        </div>
        <br />
        <br />
        <div class="yy">
            <div class="top1" id="app">
                <br />
                <span style="font-size:20px;color:dimgray;">&nbsp;&nbsp;&nbsp;&nbsp;产品入库单管理</span>
                <span class="btn">
                    <input type="button" value="删除" class="btn2" />
                </span>
                <br />
                <hr />
                <br />
                <span style="display:flex;">
                    <input type="text" class="text" placeholder="请输入产品名称/类型" />
                    <input type="button" value="搜索" class="btn3" />
                </span>
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" style="width:80px;"><input type="checkbox" />全选</th>
                            <th scope="col">入库编号</th>
                            <th scope="col">生产编号</th>
                            <th scope="col">入库日期</th>
                            <th scope="col">经办人</th>
                            <th scope="col">操作员</th>
                            <th scope="col">详细</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>@item.in_repertory_id</td>
                            <td>@item.pro_production_id</td>
                            <td>@item.in_time</td>
                            <td>@item.person_handling</td>
                            <td>@item.operator_per</td>
                            <td><input type="button" value="查看" class="btn4" /></td>
                        </tr>
                                }
                            

                        </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
