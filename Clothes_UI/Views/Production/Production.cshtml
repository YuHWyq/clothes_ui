
@{
    Layout = null;
}
@model IEnumerable<Clothes_UI.Models.get_materials>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Production</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
    <style>
        .ss {
            width: 100%;
            height: 80px;
            box-shadow: 0px 0px 3px 3px lightgray;
        }

        .yy {
            width: 100%;
            height: 800px;
            box-shadow: 0px 0px 5px 5px lightgray;
        }

        .top {
            margin-left: 50px;
        }

        .btn {
            margin-left: 1200px;
        }

        .btn1 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: Highlight;
            border: none;
        }

        .btn2 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: Highlight;
            border: none;
        }

        .btn3 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
            margin-left: -5px;
        }

        .btn4 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .brn5 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .text {
            width: 200px;
            height: 40px;
        }
    </style>
</head>
<body>
    <form action="/Production/Production" method="post" enctype="multipart/form-data">
        <div id="app">
            <div class="ss">
                <div style="margin-left:50px;">
                    <br />
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">生产管理</li>
                            <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">领料管理</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <br />
            <br />
            <div class="yy">
                <div class="top">
                    <br />
                    <span style="font-size:20px;color:dimgray;">&nbsp;&nbsp;&nbsp;&nbsp;生产计划管理表</span>
                    <span class="btn">
                        <input type="button" value="添加" class="btn1" onclick="javascrtpt:window.location.href='/Production/Productionadd'" />
                    </span>
                    <br />
                    <br />
                    <hr />
                    <br />
                    <span style="display:flex;">
                        <input type="text" class="text" placeholder="请输入订单编号" />
                        <input type="button" value="搜索" class="btn3" />
                    </span>
                    <br />                   
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">领料编号</th>
                                <th scope="col">计划编号</th>
                                <th scope="col">领材料部门</th>
                                <th scope="col">领料日期</th>
                                <th scope="col">经办人</th>
                                <th scope="col">操作员</th>
                                <th scope="col">状态</th>
                                <th scope="col">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.w_materials_id</td>
                                <td>@item.product_plan_id</td>
                                <td>@item.get_department</td>
                                <td>@item.get_time</td>
                                <td>@item.person_handling</td>
                                <td>@item.operator_per</td>
                                <td>@item.status</td>
                                <td><a href="/Production/ProductionDelete?id=@item.w_materials_id" onclick="return confirm('确认删除嘛')"><input type="button" value="删除" class="btn2"/></a></td>
                            </tr>
                                    }
                                
                            </tbody>
                    </table>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

