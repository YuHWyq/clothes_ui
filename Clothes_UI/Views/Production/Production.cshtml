
@{
    Layout = null;
}
@model IEnumerable<Clothes_UI.Models.get_materials>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Production</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
    <style>
        .ss {
            width: 100%;
            height: 80px;
            box-shadow: 0px 0px 3px 3px lightgray;
        }

        .yy {
            width: 100%;
            height: 800px;
            box-shadow: 0px 0px 5px 5px lightgray;
        }

        .top {
            margin-left: 50px;
        }

        .btn {
            margin-left: 1200px;
        }

        .btn1 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: Highlight;
            border: none;
        }

        .btn2 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: Highlight;
            border: none;
        }

        .btn3 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
            margin-left: -5px;
        }

        .btn4 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .brn5 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 2px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .text {
            width: 200px;
            height: 40px;
        }
    </style>
</head>
<body>
    <form action="/Production/Production" method="post" enctype="multipart/form-data">
        <div id="app">
            <div class="ss">
                <div style="margin-left:50px;">
                    <br />
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">生产管理</li>
                            <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">领料管理</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <br />
            <br />
            <div class="yy">
                <div class="top">
                    <br />
                    <span style="font-size:20px;color:dimgray;">&nbsp;&nbsp;&nbsp;&nbsp;生产计划管理表</span>
                    <span class="btn">
                        <input type="button" value="添加" class="btn1" onclick="javascrtpt:window.location.href='/Production/Productionadd'" />&nbsp;&nbsp;
                        <el-button type="text" v-on:click="open" class="btn2">删除</el-button>
                    </span>
                    <br />
                    <br />
                    <hr />
                    <br />
                    <span style="display:flex;">
                        <input type="text" class="text" placeholder="请输入订单编号" />
                        <el-button type="primary" icon="el-icon-search">搜索</el-button>
                    </span>
                    <br />                   
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">领料编号</th>
                                <th scope="col">计划编号</th>
                                <th scope="col">领材料部门</th>
                                <th scope="col">领料日期</th>
                                <th scope="col">经办人</th>
                                <th scope="col">操作员</th>
                                <th scope="col">状态</th>
                                <th scope="col">操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.w_materials_id</td>
                                <td>@item.product_plan_id</td>
                                <td>@item.get_department</td>
                                <td>@item.get_time</td>
                                <td>@item.person_handling</td>
                                <td>@item.operator_per</td>
                                <td>@item.status</td>
                                <td><input value="详情" type="button" v-on:click="visible = true" plain class="btn2" /></td>
                            </tr>
                                    }
                                
                            </tbody>
                    </table>
                    <div>
                        <el-dialog :visible.sync="visible" title="材料详情">
                            <hr />
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">材料详情编号</th>
                                        <th scope="col">领料单编号</th>
                                        <th scope="col">材料名称</th>
                                        <th scope="col">材料数量</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2001</td>
                                        <td>1001</td>
                                        <td>直接</td>
                                        <td>100件</td>
                                    </tr>
                                </tbody>
                            </table>
                        </el-dialog>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    <script>
        var vm = new Vue({
            el: '#app',
            data: function () {
                return { visible: false }
            },
            methods: {
                open() {
                    this.$confirm('确认删除嘛?', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning'
                    }).then(() => {
                        this.$message({
                            type: 'success',
                            message: '删除成功!'
                        });
                    }).catch(() => {
                        this.$message({
                            type: 'info',
                            message: '已取消删除'
                        });
                    });
                }
            }
        })
    </script>
</body>
</html>

