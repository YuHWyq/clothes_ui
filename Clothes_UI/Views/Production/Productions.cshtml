@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productions</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <style>
        .ss {
            width: 100%;
            height: 80px;
            box-shadow: 0px 0px 3px 3px lightgray;
        }

        .yy {
            width: 100%;
            height: 800px;
            box-shadow: 0px 0px 5px 5px lightgray;
        }

        .top {
            margin-left: 50px;
        }

        .btn {
            margin-left: 1200px;
        }

        .btn1 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 5px;
            color: white;
            background-color: Highlight;
            border: none;
        }

        .btn2 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 5px;
            color: white;
            background-color: orange;
            border: none;
        }

        .btn3 {
            font-size: 20px;
            width: 80px;
            height: 40px;
            border-radius: 5px;
            color: white;
            background-color: lightseagreen;
            border: none;
            margin-left: -5px;
        }

        .btn4 {
            font-size: 20px;
            width: 80px;
            height: 35px;
            border-radius: 5px;
            color: white;
            background-color: lightseagreen;
            border: none;
        }

        .text {
            width: 200px;
            height: 34px;
        }
    </style>
</head>
<body>
    <div>
        <div class="ss">
            <div style="margin-left:50px;">
                <br />
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">生产管理</li>
                        <li class="breadcrumb-item" style="font-size:15px;color:dimgray;">产品生产管理</li>
                    </ol>
                </nav>
            </div>
        </div>
        <br />
        <br />
        <div class="yy">
            <div class="top">
                <br />
                <span style="font-size:20px;color:dimgray;">&nbsp;&nbsp;&nbsp;&nbsp;生产计划管理表</span>
                <span class="btn">
                    <input type="button" value="添加" class="btn1" onclick="javascrtpt:window.location.href='/Production/Productionsadd'" />&nbsp;&nbsp;
                    <input type="button" value="删除" class="btn2" />
                </span>
                <br />
                <br />
                <hr />
                <br />
                <span style="display:flex;">
                    <input type="text" class="text" placeholder="请输入订单编号" />
                    <input type="button" value="搜索" class="btn3" />
                </span>
                <br />
                <span style="font-size:20px;color:dimgray;display:flex;">
                    显示<input type="number" style="width: 80px; height: 22px;" />条
                </span>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">生产编号</th>
                            <th scope="col">计划编号</th>
                            <th scope="col">产品名称</th>
                            <th scope="col">产品类型</th>
                            <th scope="col">生产数量</th>
                            <th scope="col">生产日期</th>
                            <th scope="col">操作员</th>
                            <th scope="col">状态</th>
                            <th scope="col">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>001</td>
                            <td>2012</td>
                            <td>品如</td>
                            <td>T恤</td>
                            <td>200件</td>
                            <td>2021/4/5</td>
                            <td>覃佐继</td>
                            <td>待质检</td>
                            <td><input type="button" value="编辑" class="btn4" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>