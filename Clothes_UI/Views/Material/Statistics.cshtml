            </div>
        </div>
    </div>
    <div class="section">
        <div class="section_box">
            <div class="top">
                <span style="font-size:16px;color:#808080;font-weight:bolder; padding-left:20px;line-height:28px;">材料库存管理 / <span style="font-size:14px;">入库出库统计</span></span>
            </div>
            <div class="top">
                <span style="font-size:16px;font-weight:bolder; padding-left:50px;">入库出库统计</span>
            </div>
            <div style="height:700px;">
                <div id="app" style="margin-left:100px;">
                    <div class="biaoge" style="width:90%;text-align:center;">
                        <div style="margin:0px auto;">
                            <template>
                                <el-table :data="tableData.filter(data => !search || data.name.toLowerCase().includes(search.toLowerCase()))"
                                          style="width: 100%">
                                    <el-table-column label="订单ID"
                                                     prop="orderID">
                                    </el-table-column>
                                    <el-table-column label="客户名"
                                                     prop="customer_name">
                                    </el-table-column>
                                    <el-table-column label="经手人"
                                                     prop="person_handling">
                                    </el-table-column>
                                    <el-table-column label="已付金额"
                                                     prop="order_paid">
                                    </el-table-column>
                                    <el-table-column label="未付金额"
                                                     prop="order_unpaid">
                                    </el-table-column>
                                    <el-table-column label="计划生产时间"
                                                     prop="product_time">
                                    </el-table-column>
                                    <el-table-column label="计划结束时间"
                                                     prop="product_end_time">
                                    </el-table-column>
                                    <el-table-column label="处理状态"
                                                     prop="order_status">
                                    </el-table-column>
                                    <el-table-column align="right">
                                        <template slot="header" slot-scope="scope">
                                            <el-input v-model="search"
                                                      size="mini"
                                                      placeholder="输入关键字搜索" />
                                        </template>
                                        <template slot-scope="scope">
                                            <el-button size="mini" v-on:click="handleEdit()">详情</el-button>
                                            <el-button size="mini" type="danger" v-on:click="handleDelete()" style="padding-left:10px;padding-right:10px;">删除</el-button>
                                        </template>
                                    </el-table-column>
                                </el-table>
                            </template>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
