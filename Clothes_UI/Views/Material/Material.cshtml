}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Material</title>

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="http://fonts.useso.com/css?family=Open+Sans:400,300" />
    <link rel="stylesheet" href="/assets/css/ace.min.css" />
    <link rel="stylesheet" href="/assets/css/ace-rtl.min.css" />
    <link rel="stylesheet" href="/assets/css/ace-skins.min.css" />
    <script src="/assets/js/ace-extra.min.js"></script>
    <link href="~/Content/ElementUI/element-ui.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f1f1f0;
        }

        .section {
            margin-top: 30px;
            width: 100%;
            height: 600px;
            /*background-color:white;*/
        }

        .section_box {
            width: 95%;
            margin: 0px auto;
            background-color: white;
            box-shadow: 0px 1px 10px 3px rgb(228,228,229);
        }

        .top {
            padding-top: 10px;
            width: 100%;
            height: 50px;
            border-bottom: 2px solid #f1f1f0;
        }
    </style>
</head>
<body>
    <div class="toubu">
        <div class="toubu_box">
            <div class="page-content">
                <div class="page-header">
                    <h1>
                        材料库存管理
                        <small>
                            <i class="icon-double-angle-right"></i>
                            原料库存
                        </small>
                    </h1>
                </div><!-- /.page-header -->
            </div>
        </div>
    </div>
    <div class="section">
        <div class="section_box">
            <div class="top">
                <span style="font-size:16px;color:#808080;font-weight:bolder; padding-left:20px;line-height:28px;">材料库存管理 / <span style="font-size:14px;">原料库存</span></span>
            </div>
            <div class="top">
                <span style="font-size:16px;font-weight:bolder; padding-left:50px;">原料库存管理</span>
                <div id="apps" style="float:right;">
                    <a style="color:white" href="/Material/AddYL">
                        <el-button type="primary" icon="el-icon-plus" style="background-color: rgb(52,123,183);">
                            新增
                        </el-button>
                    </a>

                </div>
            </div>
            <div style="height:700px;">
                <div id="app" style="margin-left:100px;">
                    <div class="biaoge" style="width:90%;text-align:center;">
                        <div style="margin:0px auto;">
                            <template>
                                <el-table :data="tableData.filter(data => !search || data.name.toLowerCase().includes(search.toLowerCase()))"
                                          style="width: 100%">
                                    <el-table-column label="库存编号"
                                                     prop="materialr_epertory_id">
                                    </el-table-column>
                                    <el-table-column label="材料名"
                                                     prop="materialr_details_name">
                                    </el-table-column>
                                    <el-table-column label="材料数量"
                                                     prop="materialr_num">
                                    </el-table-column>
                                    <el-table-column label="材料价格"
                                                     prop="materialr_details_price">
                                    </el-table-column>
                                    <el-table-column label="供应商"
                                                     prop="material_supplier">
                                    </el-table-column>
                                    <el-table-column align="right">
                                        <template slot="header" slot-scope="scope">
                                            <el-input v-model="search"
                                                      size="mini"
                                                      placeholder="输入关键字搜索" />
                                        </template>
                                        <template slot-scope="scope">
                                            <el-button size="mini" v-on:click="handleEdit()">修改</el-button>
                                            <el-button size="mini" type="danger" v-on:click="handleDelete()" style="padding-left:10px;padding-right:10px;">删除</el-button>
                                        </template>
                                    </el-table-column>
                                </el-table>
                            </template>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script>
        var vm = new Vue({
            el: "#app",
            data() {
                return {
                    tableData: [{
                        materialr_epertory_id: 1,
                        materialr_details_name: '棉',
                        materialr_num: 100,
                        materialr_details_price: 20.00,
                        material_supplier: '新疆棉公司',
                    }, ],
                    search: ''
                }
            },
            methods: {
                handleEdit() {
                    alert("详情");
                },
                handleDelete() {
                    alert("删除");
                }
            }
        })

        var vm1 = new Vue({
            el: "#apps",
            data: {

            }
        })
    </script>
</body>
</html>
