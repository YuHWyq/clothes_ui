            </div>
            <div class="top">
                <span style="font-size:16px;font-weight:bolder; padding-left:50px;">材料入库详情</span>
            </div>
            <div style="height:700px;">
                <div id="app" style="margin-left:100px;">
                    <div class="biaoge" style="width:90%;text-align:center;">
                        <div style="margin:0px auto;">
                            <template>
                                <el-table :data="tableData.filter(data => !search || data.materialr_details_name.toLowerCase().includes(search.toLowerCase()))"
                                          style="width: 100%">
                                    <el-table-column label="材料入库"
                                                     prop="out_materialr_id">
                                    </el-table-column>
                                    <el-table-column label="材料数量"
                                                     prop="materialr_details_num">
                                    </el-table-column>
                                    <el-table-column label="材料名称"
                                                     prop="materialr_details_name">
                                    </el-table-column>
                                    <el-table-column label="材料价格"
                                                     prop="materialr_details_price">
                                    </el-table-column>
                                    <el-table-column label="供应商"
                                                     prop="material_supplier">
                                    </el-table-column>

                                    <el-table-column align="right">
                                        <template slot="header" slot-scope="scope">
                                            <el-input v-model="search"
                                                      size="mini"
                                                      placeholder="输入关键字搜索" />
                                        </template>
                                        <template slot-scope="scope">
                                            <el-button size="mini" v-on:click="handleEdit()">详情</el-button>
                                            <el-button size="mini" type="danger" v-on:click="handleDelete()" style="padding-left:10px;padding-right:10px;">删除</el-button>
                                        </template>
                                    </el-table-column>
                                </el-table>
                            </template>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
