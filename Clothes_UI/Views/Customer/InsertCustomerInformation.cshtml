
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertCustomerInformation</title>
    <style>
        #contentheader {
            width: 100%;
            height: 200px;
            box-shadow: 0px 0px 5px 5px lightgray;
        }
        #content {
            width: 1500px;
            height: 600px;
            box-shadow: 0px 0px 5px 5px lightgray;
            margin-left: 150px;
         
            margin: 0 auto;
        }

        #header {
            margin-top: 20px;
        }

        #ulstyle {
            list-style: none;
        }
        a {
            text-decoration: none;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div id="contentheader">
        <div id="headerbody" style="border: 1px solid white">
            <p style="margin:40px; font-size: 30px;">客户管理</p>
            <a href="" style="margin-left:20px ;">首页</a>
            /<a href="">客户管理</a>
            /<a href="">客户资料</a>
        </div>
       
    </div>
    <div style="border: 1px solid white; width: 100%; margin-top:30px;"></div>
    <div id="content">

        <div style="border: 1px solid white; width: 100%;"></div>
        <div id="header">
            <div style="font-size: 20px;  margin-left: 20px;">客户资料</div>

            <div style="border: 1px solid lightgray; width: 100%; margin-top: 50px;"></div>


        </div>
        <div id="body">

            <div id="ulstyle" style="margin: 50px;">
                <table style="border:1;">
                    <tr>
                        <th><p style="font-size: 20px; margin-left:-150px ;">客户名称</p></th>
                        <th><p style="font-size: 20px; margin-left:-25px ;">电话</p></th>
                        <th><p style="font-size: 20px; margin-left:0px ;">联系人</p></th>
                    </tr>

                    <tr>
                        <td><input type="text" placeholder="启航服装有限公司" style="width: 250px; height: 30px;font-size: 18px;"></td>
                        <td><input type="text" placeholder="请输入电话" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                        <td><input type="text" placeholder="请输入联系人" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                    </tr>
                    <tr>
                        <th><p style="font-size: 20px; margin-left:-150px ;">电子邮箱</p></th>

                        <th><p style="font-size: 20px; margin-left:-25px ;">开户银行</p></th>

                        <th><p style="font-size: 20px; margin-left:0px ;">客户地址</p></th>
                    </tr>

                    <tr>
                        <td><input type="text" placeholder="请输入电子邮箱" style="width: 250px; height: 30px;font-size: 18px;"></td>
                        <td><input type="text" placeholder="请输入开户银行" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                        <td><input type="text" placeholder="请输入客户地址" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                    </tr>
                    <tr>
                        <th><p style="font-size: 20px; margin-left:-150px ;">客户传真</p></th>

                        <th><p style="font-size: 20px; margin-left:-25px ;">银行账号</p></th>

                        <th><p style="font-size: 20px; margin-left:0px ;">邮箱编码</p></th>
                    </tr>

                    <tr>
                        <td><input type="text" placeholder="请输入客户传真" style="width: 250px; height: 30px;font-size: 18px;"></td>
                        <td><input type="text" placeholder="请输入银行账号" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                        <td><input type="text" placeholder="请输入客户地址" style="width: 250px; height: 30px;font-size: 18px; margin-left:150px ;"></td>
                    </tr>
                </table>
                <div id="button">
                    <p style="text-align: center;">
                        <input type="button" value="取消" style="background-color:white ; color: lightsalmon; height: 40px;
				width: 70px; border-radius:5px;" />
                        <input type="button" value="提交" style="background-color: #20B2AA; color:white; height: 40px; width: 70px; margin-left: 30px; border-radius:5px;">
                    </p>
                </div>

            </div>
        </div>
        </div>
</body>
</html>
