
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ordermanagement</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/Content/ElementUI/element-ui.css" rel="stylesheet" />
    <style>
        #content {
            width: 100%;
            height: 800px;
            @*box-shadow: 0px 0px 5px 5px lightgray;
            *@ @* margin-left: 150px;
            *@
        }

        a {
            text-decoration: none;
            font-size: 20px;
        }
        #header {
            margin-top: 20px;
        }
        .btn2 {
            float: right;
            background-color: lightseagreen;
            height: 40px;
            width: 70px;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div id="content">
        <div id="contentheader">
            <div id="headerbody" style="border: 1px solid white">
                <p style="margin-top:20px; margin-left:40px; font-size: 30px;">采购订单管理</p>
                <a href="" style="margin-left:20px ;">首页</a>
                /<a href="">添加采购订单</a>
                /<a href="">采购统计</a>
            </div>
        </div>
        <div style="border: 1px solid lightgray; width: 100%; margin-top:20px;"></div>
        <div id="header">

            <span style="font-size: 20px; margin: 20px;">添加采购单</span>

            <input type="button" class="btn2" value="添加" style="margin-right:20px; border-radius:5px; color: white;" onclick="skip()"></input>



        </div>
        <div style="border: 1px solid lightgray; width: 100%; margin-top:50px;"></div>
        <div id="body">
            <input type="text" placeholder="请输入材料名称" style="height:40px; width: 300px; margin: 20px; font-size: 20px;" />
            <input type="button" value="搜索" style="margin: -25px; height: 50px; width: 75px; height:48px; border-radius: 5px; background-color: #20B2AA; color: white;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">采购订单ID</th>
                        <th scope="col">采购计划ID</th>
                        <th scope="col">采购人</th>
                        <th scope="col">材料质检状态</th>
                        <th scope="col">操作人</th>

                    </tr>
                </thead>
                @foreach (var in_materialr in Model)
                {


                <tbody>

                    <tr v-for="item in info">
                        <td>@in_materialr.in_materialr_id</td>
                        <td>@in_materialr.materialr_plan_id</td>
                        <td>@in_materialr.person_handling</td>
                        <td>@in_materialr.status</td>
                        <td>@in_materialr.operator_per</td>

                    </tr>
                </tbody>
                }
            </table>
        </div>
    </div>
    <script>
        function skip() {
            window.location.href = '/Purchase/Purchase';

        }
    </script>
</body>
</html>
