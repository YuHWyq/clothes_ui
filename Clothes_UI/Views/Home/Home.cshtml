<body>
    @*<h1>首页</h1>*@
    <div class="toubu">
        <div class="toubu_box">
            <div class="page-content" style="background-color:#f1f1f0">
                <div class="page-header">
                    <h1>
                        首页
                        <small>
                            <i class="icon-double-angle-right"></i>
                            查看
                        </small>
                    </h1>
                </div><!-- /.page-header -->
            </div>
        </div>
    </div>
    <div id="tops" class="tops">
        <div class="tops_box">
            <div class="one">
                <div class="one_top">
                    <p>总销售量</p>
                </div>
                <div class="one_se">
                    <p>1000单</p>
                </div>
            </div>
            <div class="one">
                <div class="one_top">
                    <p>今年销量</p>
                </div>
                <div class="one_se">
                    <p>173单</p>
                </div>
            </div>
            <div class="two">
                <div class="two_top">
                    <p>总支出</p>
                </div>
                <div class="two_tops">
                    <p>总收入</p>
                </div>
                <div class="two_se">
                    <p>1,000万元</p>
                </div>
                <div class="two_se">
                    <p>2,000万元</p>
                </div>
            </div>
            <div class="two">
                <div class="two_top">
                    <p>今年支出</p>
                </div>
                <div class="two_tops">
                    <p>今年收人</p>
                </div>
                <div class="two_se">
                    <p>100万元</p>
                </div>
                <div class="two_se">
                    <p>200万元</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="section">

        <div class="section_box">
            <div class="section_title">销量统计</div>
            <div id="appbox">
                <div id="app" style="width:1000px;height:500px;">

                </div>
            </div>
        </div>
    </div>
    <div class="bottoms">
        <div class="bottoms_box">
            <div class="three">
                <div class="section_title">收入统计</div>
                <div id="app1box" style=" width:410px;height:410px; margin:0px auto;">
                    <div id="app1" style="width:400px;height:400px;">

                    </div>
                </div>
            </div>
            <div class="three">
                <div class="section_title">支出统计</div>
                <div id="app2box" style=" width:410px;height:410px; margin:0px auto;">
                    <div id="app2" style="width:400px;height:400px;">

                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Scripts/echarts.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script>

        // $.ajax({
        //     url:'https://localhost:44368/api/Default/ss',
        //     type:'GET',
        //     dataType:'JSON',
        //     success:function(data){
        //         console.log(data);
        //     }
        // });
        var myChart = echarts.init(document.getElementById('app'));
        option = {
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'cross',
                    crossStyle: {
                        color: '#999'
                    }
                }
            },
            toolbox: {
                feature: {
                    dataView: { show: true, readOnly: false },
                    magicType: { show: true, type: ['line', 'bar'] },
                    restore: { show: true },
                    saveAsImage: { show: true }
                }
            },
            legend: {
                data: ['蒸发量', '降水量', '平均温度']
            },
            xAxis: [
                {
                    type: 'category',
                    data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
                    axisPointer: {
                        type: 'shadow'
                    }
                }
            ],
            yAxis: [
                {
                    type: 'value',
                    name: '水量',
                    min: 0,
                    max: 250,
                    interval: 50,
                    axisLabel: {
                        formatter: '{value} ml'
                    }
                },
                {
                    type: 'value',
                    name: '温度',
                    min: 0,
                    max: 25,
                    interval: 5,
                    axisLabel: {
                        formatter: '{value} °C'
                    }
                }
            ],
            series: [
                {
                    name: '蒸发量',
                    type: 'bar',
                    data: [2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3]
                },
                {
                    name: '降水量',
                    type: 'bar',
                    data: [2.6, 5.9, 9.0, 26.4, 28.7, 70.7, 175.6, 182.2, 48.7, 18.8, 6.0, 2.3]
                },
                {
                    name: '平均温度',
                    type: 'line',
                    yAxisIndex: 1,
                    data: [2.0, 2.2, 3.3, 4.5, 6.3, 10.2, 20.3, 23.4, 23.0, 16.5, 12.0, 6.2]
                }
            ]
        };
        myChart.setOption(option);

        var myChart1 = echarts.init(document.getElementById('app1'))
        option1 = {
            tooltip: {
                trigger: 'item'
            },
            legend: {
                top: '5%',
                left: 'center'
            },
            series: [
                {
                    name: '收入来源',
                    type: 'pie',
                    radius: ['40%', '70%'],
                    avoidLabelOverlap: false,
                    itemStyle: {
                        borderRadius: 10,
                        borderColor: '#fff',
                        borderWidth: 2
                    },
                    label: {
                        show: false,
                        position: 'center'
                    },
                    emphasis: {
                        label: {
                            show: true,
                            fontSize: '40',
                            fontWeight: 'bold'
                        }
                    },
                    labelLine: {
                        show: false
                    },
                    data: [
                        { value: 1048, name: 'T恤' },
                        { value: 735, name: '外套' },
                        { value: 580, name: '牛仔裤' }
                    ]
                }
            ]
        };
        myChart1.setOption(option1);

        var myChart2 = echarts.init(document.getElementById('app2'))
        option2 = {
            tooltip: {
                trigger: 'item'
            },
            legend: {
                top: '5%',
                left: 'center'
            },
            series: [
                {
                    name: '收入来源',
                    type: 'pie',
                    radius: ['40%', '70%'],
                    avoidLabelOverlap: false,
                    itemStyle: {
                        borderRadius: 10,
                        borderColor: '#fff',
                        borderWidth: 2
                    },
                    label: {
                        show: false,
                        position: 'center'
                    },
                    emphasis: {
                        label: {
                            show: true,
                            fontSize: '40',
                            fontWeight: 'bold'
                        }
                    },
                    labelLine: {
                        show: false
                    },
                    data: [
                        { value: 600, name: 'T恤' },
                        { value: 300, name: '外套' },
                        { value: 580, name: '牛仔裤' }
                    ]
                }
            ]
        };
        myChart2.setOption(option2);
    </script>
</body>
</html>
